        .container
            .header__inner
                a(href='/').header__logo
                    include ../assets/images/logo.svg
                .header__nav
                    nav
                        ul
                            li
                                a(href='javascript:void(0)') Главная
                            li
                                a(href='javascript:void(0)') О компании
                            li
                                a(href='javascript:void(0)') Продукция
